<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái khi EditText đang được focus -->
    <item android:state_enabled="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- Màu nền -->
            <corners android:radius="10dp"/> <!-- Bo góc lớn hơn -->
            <stroke android:width="15dp" android:color="@color/material_dynamic_primary0"/> <!-- Viền khi focus -->
        </shape>
    </item>

    <!-- Trạng thái khi EditText được kích hoạt nhưng không focus -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- Màu nền -->
            <corners android:radius="10dp"/> <!-- Bo góc lớn hơn -->
            <stroke android:width="1dp" android:color="@android:color/background_dark"/> <!-- Viền khi không focus -->
        </shape>
    </item>

</selector>